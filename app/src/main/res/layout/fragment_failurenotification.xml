    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:foregroundGravity="fill_horizontal"
    app:layoutDescription="@xml/fragment_failurenotification_scene">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FB8D8D"
        android:backgroundTint="#C66D6D"
        android:clickable="false"
        android:shadowColor="#FF1100"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1000"
        android:text="You failed. Restarting minigame..."
